[Unit]
Description=AutoDesk timer server
Requires=autodesk-uwsgi.service
After=autodesk-uwsgi.service

[Service]
Type=simple
User=autodesk
ExecStart=/usr/bin/bash -c 'tail -n1 -f /var/local/autodesk/timer | /var/local/autodesk/venv/bin/python /var/local/autodesk/venv/bin/autodesk-timer http://localhost:8000'

[Install]
WantedBy=multi-user.target
